# ============================================
# Knowledge Bot Railway Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# For Railway deployment, set these in the Railway dashboard
# ============================================

# ============================================
# API Keys (Required)
# ============================================
GEMINI_API_KEY=
OPENAI_API_KEY=

# ============================================
# Gemini FileSearch Configuration
# ============================================
# According to official docs (https://ai.google.dev/gemini-api/docs/file-search):
# File Search stores are created automatically - no Project ID or Location needed!
# Only the store name is required.
GEMINI_FILESEARCH_DATA_STORE_NAME=knowledgebot-search-store

# Legacy variables (optional, kept for backward compatibility)
# These are NOT required for the new File Search API
GEMINI_FILESEARCH_PROJECT_ID=
GEMINI_FILESEARCH_LOCATION=
GEMINI_FILESEARCH_DATA_STORE_ID=

# ============================================
# Service URLs (for local development)
# Override these for Railway deployment with actual service URLs
# ============================================
KNOWLEDGEBASE_INGESTION_URL=http://localhost:8001
WEBSITE_SCRAPING_URL=http://localhost:8002
CHATBOT_ORCHESTRATION_URL=http://localhost:8003

# ============================================
# Chatbot Configuration (Optional)
# ============================================
CHATBOT_MODEL=gpt-4o
CHATBOT_MAX_TOKENS=2000
CHATBOT_TEMPERATURE=0.7

# ============================================
# Human-in-the-Loop Configuration (Optional)
# ============================================
HITL_ENABLED=false
HITL_WEBHOOK_URL=

# ============================================
# Session Configuration (Optional)
# ============================================
SESSION_TIMEOUT_SECONDS=3600

# ============================================
# Service Ports (Auto-configured by Railway)
# These are for local development only
# ============================================
# Note: Each service uses its own PORT variable
# API Gateway: PORT=8000
# Knowledgebase Ingestion: PORT=8001
# Website Scraping: PORT=8002
# Chatbot Orchestration: PORT=8003

