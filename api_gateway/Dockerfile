FROM python:3.12-slim

# Add metadata labels
LABEL maintainer="Knowledge Bot Team"
LABEL description="API Gateway service for Knowledge Bot"

# Set environment variables for better logging
ENV PYTHONUNBUFFERED=1
ENV PYTHONHASHSEED=random
ENV PIP_NO_CACHE_DIR=1
ENV PIP_DISABLE_PIP_VERSION_CHECK=1
# Set the PYTHONPATH environment variable to include the /app directory
ENV PYTHONPATH="/app"

WORKDIR /app

# Log build start
RUN echo "ğŸš€ Starting API Gateway Docker build..." && \
    echo "ğŸ“… Build timestamp: $(date)" && \
    echo "ğŸ³ Using Python: $(python3 --version)"

# Install system dependencies with detailed logging
RUN echo "ğŸ“¦ Installing system dependencies..." && \
    apt-get update && \
    apt-get install -y --no-install-recommends \
    build-essential \
    libxml2-dev \
    libxslt1-dev \
    curl \
    && \
    echo "âœ… System dependencies installed" && \
    rm -rf /var/lib/apt/lists/* && \
    echo "ğŸ§¹ Cleaned up apt cache"

# Copy and install Python dependencies
COPY requirements.txt .
RUN echo "ğŸ Installing Python dependencies..." && \
    pip install --no-cache-dir -r requirements.txt && \
    echo "âœ… Python dependencies installed" && \
    pip list | grep -E "(fastapi|uvicorn|httpx|pydantic)"

# Copy application code with logging
COPY api_gateway/ ./api_gateway/
COPY shared ./shared/
RUN echo "ğŸ“ Application code copied" && \
    ls -la api_gateway/ && \
    echo "ğŸ“„ Main application file:" && \
    head -n 10 api_gateway/main.py

# Set working directory to api_gateway
WORKDIR /app/api_gateway

# Create logs directory
RUN mkdir -p /app/logs && \
    echo "ğŸ“ Logs directory created"



# Update health check to use the `/ready` endpoint
HEALTHCHECK --interval=30s --timeout=10s --start-period=60s --retries=5 \
    CMD sh -c 'curl -f http://localhost:${API_GATEWAY_PORT:-${PORT:-8080}}/ready || exit 1'

# Run the application with explicit module path and prefer API_GATEWAY_PORT, then PORT, then default 8080
CMD ["sh", "-c", "exec python -m uvicorn main:app --host 0.0.0.0 --port ${API_GATEWAY_PORT:-${PORT:-8080}} --log-level info --access-log"]
